<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".barbermen.ControlStylish"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#392929"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageseperadmin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:src="@drawable/iconret" />

        <TextClock
            android:id="@+id/idTextClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:format24Hour="hh:mm:ss a"
            android:textColor="@color/hitam"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textColor="@color/hitam"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/karyawan"
                style="@style/ButtonText"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/button_merah"
                android:drawableLeft="@android:drawable/ic_partial_secure"
                android:hint="Stylish Absen"
                android:textSize="17dp" />

            <Button
                android:id="@+id/rubahakun"
                style="@style/ButtonText"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/buttonhijau"
                android:drawableLeft="@drawable/settings"
                android:hint="Edit Akun Stylish"
                android:textSize="17dp" />

            <Button
                android:id="@+id/Order"
                style="@style/ButtonText"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/buttonhitam"
                android:drawableLeft="@drawable/keranjang"
                android:hint="Order"
                android:textSize="17dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <!--android:orientation="horizontal">-->
            <!--<Button-->
            <!--android:id="@+id/penjualan"-->
            <!--android:drawableLeft="@android:drawable/ic_menu_agenda"-->
            <!--style="@style/ButtonText"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_below="@+id/buttonHijau"-->
            <!--android:layout_height="150dp"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:textSize="17dp"-->
            <!--android:background="@drawable/buttonorange"-->
            <!--android:hint="Laporan Pemasukan Stylish"/>-->
            <Button
                android:id="@+id/penjualan"
                style="@style/ButtonText"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/buttonorange"
                android:drawableLeft="@android:drawable/ic_menu_agenda"
                android:hint="Laporan Pembukuan"
                android:textSize="17dp" />

            <Button
                android:id="@+id/tambahakun"
                style="@style/ButtonText"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/buttonungun"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:hint="Tambah Akun"
                android:textSize="17dp" />

        </LinearLayout>

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/logout"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/shutdown"
            app:siBorderColor="@color/blue"
            app:siBorderWidth="6dp" />

    </LinearLayout>
</ScrollView>